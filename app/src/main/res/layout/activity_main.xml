<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ulisboa.tecnico.cmov.hoponcmu.MainActivity">

    <Button
        android:id="@+id/monList_btn"
        android:layout_width="140dp"
        android:layout_height="51dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="128dp"
        android:onClick="listMonumentsBtnClicked"
        android:text="List Monuments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/score_btn"
        android:layout_width="140dp"
        android:layout_height="51dp"
        android:layout_marginBottom="108dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="8dp"
        android:onClick="scoreBtnClicked"
        android:text="Score"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizes_btn"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/quizes_btn"
        android:layout_width="140dp"
        android:layout_height="51dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="60dp"
        android:text="Quizes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monList_btn" />
</android.support.constraint.ConstraintLayout>

